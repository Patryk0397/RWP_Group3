<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.taffy.gompare.login_page"
    android:background="@android:color/background_dark">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/editText2"
        android:textColorHint="@android:color/background_light"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Username or Email"
        android:ems="10"
        android:layout_marginTop="100dp"
        android:id="@+id/editText"
        android:textColor="?attr/colorBackgroundFloating"
        android:textColorHint="@android:color/background_light"
        android:layout_marginEnd="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="LOG IN"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:id="@+id/log_in_button"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <Button
        android:text="Browse AS Guest"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:layout_marginTop="13dp"
        android:id="@+id/browse_as_guest_button"
        android:layout_below="@+id/log_in_button"
        android:layout_alignStart="@+id/log_in_button"
        android:layout_alignEnd="@+id/log_in_button" />

    <Button
        android:text="CREATE AN ACCOUNT"
        android:layout_width="95dp"
        android:layout_height="35dp"
        android:id="@+id/create_account_button"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/browse_as_guest_button"
        android:layout_alignStart="@+id/browse_as_guest_button"
        android:layout_alignEnd="@+id/browse_as_guest_button" />

    <TextView
        android:text="Forgot Password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        android:layout_below="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

</RelativeLayout>
